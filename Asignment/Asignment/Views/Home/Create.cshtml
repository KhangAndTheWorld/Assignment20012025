@model Asignment.Models.Event

@{
    ViewData["Title"] = "Create Event";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Create Event</title>
    <link rel="stylesheet" href="~/vendor/libs/bootstrap-select/bootstrap-select.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive"></script>
</head>
<body>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <h5 class="card-header text-center bg-primary text-white">Create New Event</h5>
                <div class="card-body">
                    <form id="formValidationExamples" class="row g-4" asp-action="PostEvent" asp-controller="Home" method="post">
                        @Html.AntiForgeryToken()
                        <!-- Event Name -->
                        <div class="col-md-12">
                            <label asp-for="Name" class="form-label fw-bold">Event Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter event name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <!-- Event Date -->
                        <div class="col-md-6">
                            <label asp-for="Date" class="form-label fw-bold">Event Date</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-calendar"></i></span>
                                <input asp-for="Date" type="datetime-local" class="form-control" />
                            </div>
                            <span asp-validation-for="Date" class="text-danger small"></span>
                        </div>

                        <!-- Event Location -->
                        <div class="col-md-6">
                            <label asp-for="Location" class="form-label fw-bold">Event Location</label>
                            <input asp-for="Location" class="form-control" placeholder="Enter event location" />
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>

                        <!-- Event Description -->
                        <div class="col-md-12">
                            <label asp-for="Description" class="form-label fw-bold">Event Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter event description"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="col-md-6">
                            <label asp-for="ImageUrl" class="form-label fw-bold">Event Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>

                        <!-- Event Status -->
                        <div class="col-md-6">
                            <label asp-for="Status" class="form-label fw-bold">Event Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="0">Chưa bắt đầu</option>
                                <option value="1">Ðang diễn ra</option>
                                <option value="2">Ðã kết thúc</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-success w-50">Create Event</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
